    SetGlobal("AYSpawnResetAR20121","%WerewolfCaverns%",1)
    CreateCreature("WEREWO",[1521.832],0)  // ~Werewolf~
    SetGlobalTimer("AYSpawnTimerAR20121","%WerewolfCaverns%",AY_SPAWN_TIMER)
